<Page
    x:Class="Files.PropertiesDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Files.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:filesystem="using:Files.Filesystem"
    xmlns:Maps="using:Windows.UI.Xaml.Controls.Maps"
    xmlns:sys="using:System"
    Loaded="Properties_Loaded"
    mc:Ignorable="d"
    Name="Page"
    d:DesignHeight="3000">

    <Page.Resources>
        <Style x:Key="PropertyTextBlock" TargetType="TextBlock">
            <Setter Property="Grid.Column" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ValueTextBox" TargetType="TextBox">
            <Setter Property="Grid.Column" Value="1"/>
            <Setter Property="Margin" Value="20,2,0,2"/>
            <Setter Property="CornerRadius" Value="2"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="ValueNumberBox" TargetType="TextBox">
            <Setter Property="Grid.Column" Value="1"/>
            <Setter Property="Margin" Value="20,2,0,2"/>
            <Setter Property="CornerRadius" Value="2"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="ValueTextBlock" TargetType="TextBlock">
            <Setter Property="Grid.Column" Value="1"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="20,2,0,2"/>
        </Style>

        <Style TargetType="MenuFlyoutSeparator" x:Key="Separator">
            <Setter Property="Grid.Column" Value="0"/>
            <Setter Property="Grid.ColumnSpan" Value="2"/>
            <Setter Property="Margin" Value="-12, 0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="SeparatorText">
            <Setter Property="Grid.Column" Value="0"/>
            <Setter Property="FontSize" Value="22"/>
        </Style>
       
    </Page.Resources>
    <ScrollViewer Height="{Binding Height, ElementName=Page, Mode=OneWay}" Name="ScrollViewer">
        <StackPanel VerticalAlignment="Top" Margin="14,0,14,0" Name="MainGrid">
            <Grid x:Load="True" x:Name="HeaderGrid" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid 
                x:Name="Icon2"
                Grid.Row="0"
                Grid.Column="0"
                Width="80"
                Height="80"
                Margin="0,7"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                    <Image
                    x:Name="FolderGlyphIcon2"
                    Width="70"
                    Height="70"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    x:Load="{x:Bind ViewModel.LoadFolderGlyph}"
                    Stretch="Uniform">
                        <Image.Source>
                            <SvgImageSource
                            RasterizePixelHeight="128"
                            RasterizePixelWidth="128"
                            UriSource="{x:Bind ViewModel.FolderIconSource}" />
                        </Image.Source>
                    </Image>
                    <FontIcon
                    x:Name="EmptyImageIcon2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    x:Load="{x:Bind ViewModel.LoadUnknownTypeGlyph, Mode=OneWay}"
                    FontFamily="{StaticResource FluentUIGlyphs}"
                    FontSize="70"
                    Glyph="&#xea00;" />
                    <FontIcon
                    x:Name="WebShortcutGlyph2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    x:Load="{x:Bind ViewModel.LoadLinkIcon, Mode=OneWay}"
                    FontFamily="{StaticResource FluentUIGlyphs}"
                    FontSize="70"
                    Glyph="&#xEAAB;" />
                    <Image
                    x:Name="itemIcon2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    x:Load="{x:Bind ViewModel.LoadFileIcon, Mode=OneWay}"
                    Source="{x:Bind ViewModel.FileIconSource, Mode=OneWay}" />
                </Grid>
                <TextBox
                x:Name="itemFileName2"
                x:Uid="PropertiesItemFileName"
                Grid.Row="0"
                Grid.Column="1"
                Margin="20,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                BorderThickness="1"
                IsReadOnly="True"
                Text="{x:Bind ViewModel.ItemName, Mode=OneWay}"
                Visibility="{x:Bind ViewModel.ItemNameVisibility, Mode=OneWay}" />
            </Grid>

            <TextBlock Text="Overview" Grid.Row="1" Style="{StaticResource SeparatorText}" Visibility="{Binding ElementName=OverviewImage, Path=Visibility, Mode=OneWay}"/>
            <MenuFlyoutSeparator Grid.Row="2" Style="{StaticResource Separator}" Visibility="{Binding ElementName=OverviewImage, Path=Visibility, Mode=OneWay}"/>

            <Grid x:Load="True" Grid.Row="3" Grid.Column="0" x:Name="OverviewImage" Visibility="Collapsed">
                <Grid.RowDefinitions >
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding ElementName=TopColumn, Path=Width, Mode=OneWay}" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <TextBlock Style="{StaticResource PropertyTextBlock}" Text="Image Type:" Visibility="Visible" Grid.Row="3"/>
                <TextBlock Style="{StaticResource ValueTextBlock}" Grid.Row="3" Text="{x:Bind ViewModel.ItemType, Mode=OneWay}"/>

                <TextBlock Style="{StaticResource PropertyTextBlock}" Grid.Row="4" Text="Date Taken:" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Photo, Mode=OneWay}"/>
                <TextBlock Style="{StaticResource ValueTextBlock}" Grid.Row="4" Text="{x:Bind ViewModel.SystemFileProperties_RO['System.Photo.DateTaken'].ToString(), Mode=OneWay}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Photo, Mode=OneWay}"/>

                <TextBlock Style="{StaticResource PropertyTextBlock}" Grid.Row="5" Text="Dimensions:" Visibility="Visible" />
                <TextBlock Grid.Row="5" Text="{x:Bind ViewModel.SystemFileProperties_RO['System.Image.Dimensions'].ToString(), Mode=OneWay}" Visibility="Visible" Style="{StaticResource ValueTextBlock}"/>

                <TextBlock Grid.Row="7" Text="Camera:" Style="{StaticResource PropertyTextBlock}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Photo, Mode=OneWay}"/>
                <TextBlock Grid.Row="7" Text="{x:Bind ViewModel.CameraNameString, Mode=OneWay}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Photo, Mode=OneWay}" Style="{StaticResource ValueTextBlock}"/>

                <TextBlock Grid.Row="8" Text="Shot:" Style="{StaticResource PropertyTextBlock}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Photo}"/>
                <TextBlock Text="{x:Bind ViewModel.ShotString, Mode=OneWay}" Grid.Row="8" Style="{StaticResource ValueTextBlock}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Photo}"/>

                <TextBlock Grid.Row="9" Text="Location:" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_GPS, Mode=OneWay}" Style="{StaticResource PropertyTextBlock}"/>
                <TextBlock Text="{x:Bind ViewModel.GeopointString, Mode=OneWay}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_GPS, Mode=OneWay}" Grid.Row="9" Style="{StaticResource ValueTextBlock}"/>

                <Button
                    Grid.Row="9"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center" HorizontalAlignment="Right"
                    ToolTipService.ToolTip="Open in Maps"
                    Click="Button_Click"
                    Visibility="{x:Bind ViewModel.DetailsSectionVisibility_GPS, Mode=OneWay}">
                    <FontIcon FontFamily="{StaticResource FluentUIGlyphs}" Glyph="&#xeae8;"/>
                </Button>
            </Grid>

            <TextBlock Text="Core" Grid.Row="4" Style="{StaticResource SeparatorText}"/>
            <MenuFlyoutSeparator Grid.Row="5" Style="{StaticResource Separator}"/>

            <Grid x:Name="CoreGrid" x:Load="True" Grid.Row="6" Grid.Column="0">
                <Grid.RowDefinitions >
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="TopColumn" Width="80" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row ="0" Style="{StaticResource PropertyTextBlock}" Text="Error"/>
                <TextBox Grid.Row ="0" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.DevKeyError, Mode=TwoWay}"/>

                <TextBlock Grid.Row ="1" Style="{StaticResource PropertyTextBlock}" Text="Key"/>
                <TextBox Grid.Row ="1" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.DevKey, Mode=TwoWay}"/>

                <TextBlock Grid.Row ="7" Style="{StaticResource PropertyTextBlock}" Text="Rating"/>
                <TextBox Grid.Row="7" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_RO['System.Rating'].ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="8" Style="{StaticResource PropertyTextBlock}" Text="Comments"/>
                <TextBox Grid.Row ="8" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_RW['System.Comment'], Mode=TwoWay}"/>

                <TextBlock Grid.Row ="9" Style="{StaticResource PropertyTextBlock}" Text="Copyright"/>
                <TextBox Grid.Row ="9" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_RW['System.Copyright'], Mode=TwoWay}"/>

                <TextBlock Grid.Row ="10" Style="{StaticResource PropertyTextBlock}" Text="Type"/>
                <TextBox Grid.Row ="10" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_RO['System.ItemTypeText'].ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="11" Style="{StaticResource PropertyTextBlock}" Text="Folder Path"/>
                <TextBox Grid.Row ="11" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_RO['System.ItemFolderPathDisplay'].ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="12" Style="{StaticResource PropertyTextBlock}" Text="Date Created"/>
                <TextBox Grid.Row ="12" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_RO['System.DateCreated'].ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="13" Style="{StaticResource PropertyTextBlock}" Text="Date Modified"/>
                <TextBox Grid.Row ="13" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_RO['System.DateModified'].ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="14" Style="{StaticResource PropertyTextBlock}" Text="Size"/>
                <TextBox Grid.Row ="14" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_RW['System.Size'].ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="15" Style="{StaticResource PropertyTextBlock}" Text="Owner"/>
                <TextBox Grid.Row ="15" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_RW['System.FileOwner'].ToString(), Mode=OneWay}" IsReadOnly="True"/>

            </Grid>

            <TextBlock Grid.Row="10" Text="Image"  Style="{StaticResource SeparatorText}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Image, Mode=OneWay}"/>
            <MenuFlyoutSeparator Grid.Row="11" Style="{StaticResource Separator}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Image, Mode=OneWay}"/>

            <Grid x:Name="ImageGrid" x:Load="True" Grid.Row="12" Grid.Column="0" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Image, Mode=OneWay}">
                <Grid.RowDefinitions >
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding ElementName=TopColumn, Path=Width, Mode=OneWay}" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row ="0" Style="{StaticResource PropertyTextBlock}" Text="Image ID"/>
                <TextBox Grid.Row ="0" Style="{StaticResource ValueTextBox}"/>

                <TextBlock Grid.Row ="1" Style="{StaticResource PropertyTextBlock}" Text="Dimensions"/>
                <TextBox Grid.Row ="1" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_RO['System.Image.Dimensions'], Mode=OneWay, FallbackValue='0x0'}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="7" Style="{StaticResource PropertyTextBlock}" Text="Width"/>
                <TextBox Grid.Row ="7" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_RO['System.Image.HorizontalSize'].ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="8" Style="{StaticResource PropertyTextBlock}" Text="Height"/>
                <TextBox Grid.Row ="8" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_RO['System.Image.VerticalSize'].ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="9" Style="{StaticResource PropertyTextBlock}" Text="Horizontal Resolution"/>
                <TextBox Grid.Row ="9" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_RO['System.Image.HorizontalResolution'].ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="10" Style="{StaticResource PropertyTextBlock}" Text="Vertical Resolution"/>
                <TextBox Grid.Row ="10" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_RO['System.Image.VerticalResolution'].ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="11" Style="{StaticResource PropertyTextBlock}" Text="Bit Depth"/>
                <TextBox Grid.Row ="11" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_RO['System.Image.BitDepth'].ToString(), Mode=OneWay}" IsReadOnly="True"/>

            </Grid>

            <TextBlock Grid.Row="13" Text="Photo"  Style="{StaticResource SeparatorText}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Photo, Mode=OneWay}"/>
            <MenuFlyoutSeparator Grid.Row="14" Style="{StaticResource Separator}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Photo, Mode=OneWay}"/>
            <Grid x:Name="PhotoGrid" x:Load="True" Grid.Row="15" Grid.Column="0" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Photo, Mode=OneWay}">
                <Grid.RowDefinitions >
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding ElementName=TopColumn, Path=Width, Mode=OneWay}" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row ="0" Style="{StaticResource PropertyTextBlock}" Text="Camera manufacturer"/>
                <TextBox Grid.Row ="0" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_RW['System.Photo.CameraManufacturer'], Mode=TwoWay}"/>

                <TextBlock Grid.Row ="1" Style="{StaticResource PropertyTextBlock}" Text="Camera Model"/>
                <TextBox Grid.Row ="1" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_RW['System.Photo.CameraModel'], Mode=TwoWay}"/>

                <TextBlock Grid.Row ="2" Style="{StaticResource PropertyTextBlock}" Text="Dake taken"/>
                <TextBox Grid.Row ="2" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_RO['System.Photo.DateTaken'].ToString()}"/>

                <TextBlock Grid.Row ="3" Style="{StaticResource PropertyTextBlock}" Text="Exposure"/>
                <TextBox Grid.Row ="3" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_RO['System.Photo.ExposureTime'].ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="4" Style="{StaticResource PropertyTextBlock}" Text="Focal Length"/>
                <TextBox Grid.Row ="4" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_RO['System.Photo.FocalLength'].ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="5" Style="{StaticResource PropertyTextBlock}" Text="Aperature"/>
                <TextBox Grid.Row ="5" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_RO['System.Photo.Aperture'].ToString(), Mode=OneWay}" IsReadOnly="True"/>
            </Grid>
            
            <TextBlock Text="GPS"  Style="{StaticResource SeparatorText}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_GPS, Mode=OneWay}"/>
            <MenuFlyoutSeparator Grid.Row="20" Style="{StaticResource Separator}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_GPS, Mode=OneWay}"/>
            <Grid x:Name="GPSGrid" x:Load="True" Grid.Row="21" Grid.Column="0" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_GPS, Mode=OneWay}">
                <Grid.RowDefinitions >
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding ElementName=TopColumn, Path=Width, Mode=OneWay}" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row ="0" Style="{StaticResource PropertyTextBlock}" Text="Latitude"/>
                <TextBox Grid.Row ="0" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.Latitude.ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="1" Style="{StaticResource PropertyTextBlock}" Text="Longitude"/>
                <TextBox Grid.Row ="1" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.Longitude.ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="2" Style="{StaticResource PropertyTextBlock}" Text="Altitude"/>
                <TextBox Grid.Row ="2" Style="{StaticResource ValueTextBox}" IsReadOnly="True" Text="{x:Bind ViewModel.SystemFileProperties_RO['System.GPS.Altitude'].ToString(), Mode=OneWay}"/>

                <TextBlock Grid.Row ="3" Style="{StaticResource PropertyTextBlock}" Text="Address"/>
                <TextBox Grid.Row ="3" Style="{StaticResource ValueTextBox}" IsReadOnly="True" Text="{x:Bind ViewModel.Geopoint.Address.FormattedAddress, Mode=OneWay}"/>
            </Grid>
            
            <Button x:Name="ClearPersonalInformation" Margin="0, 10, 0, 0" Grid.Row="25" Content="Clear All Personal Information" HorizontalAlignment="Stretch">
                <Button.Flyout>
                    <Flyout x:Name="ClearPersonalInformationFlyout">
                        <StackPanel Orientation="Vertical" Spacing="5">
                            <TextBlock Text="Confirm?"/>
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <Button Content="Clear" Click="ClearPersonalInformation_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
            </Button>
        </StackPanel>
    </ScrollViewer>
</Page>