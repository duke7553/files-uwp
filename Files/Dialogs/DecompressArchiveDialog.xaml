<ContentDialog
    x:Class="Files.Dialogs.DecompressArchiveDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Files.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Extraction options"
    PrimaryButtonCommand="{x:Bind ViewModel.StartExtractingCommand}"
    PrimaryButtonText="Extract"
    SecondaryButtonText="Cancel"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <TextBlock FontSize="18" Text="The archive will be extracted to:" />
            <TextBlock Text="{x:Bind ViewModel.DestinationFolderLocation}" />
        </StackPanel>
    </Grid>
</ContentDialog>
