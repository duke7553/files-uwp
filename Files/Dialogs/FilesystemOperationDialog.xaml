<ContentDialog
    x:Class="Files.Dialogs.FilesystemOperationDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:Files.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vc="using:Files.Converters"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:icore="using:Microsoft.Xaml.Interactions.Core"
    Title="{x:Bind ViewModel.Title, Mode=OneWay}"
    CornerRadius="4"
    DefaultButton="Primary"
    PrimaryButtonCommand="{x:Bind ViewModel.PrimaryButtonCommand, Mode=OneWay}"
    PrimaryButtonStyle="{StaticResource DefaultButtonStyle}"
    PrimaryButtonText="{x:Bind ViewModel.PrimaryButtonText, Mode=OneWay}"
    RequestedTheme="{x:Bind helpers:ThemeHelper.RootTheme}"
    SecondaryButtonCommand="{x:Bind ViewModel.SecondaryButtonCommand, Mode=OneWay}"
    SecondaryButtonStyle="{StaticResource DefaultButtonStyle}"
    SecondaryButtonText="{x:Bind ViewModel.SecondaryButtonText, Mode=OneWay}"
    mc:Ignorable="d">
    <i:Interaction.Behaviors>
        <!--  No need to specify CommandParameter - `e` is passed by default  -->
        <icore:EventTriggerBehavior EventName="Loaded">
            <icore:InvokeCommandAction Command="{x:Bind ViewModel.LoadedCommand, Mode=OneWay}" />
        </icore:EventTriggerBehavior>
    </i:Interaction.Behaviors>

    <ContentDialog.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <ResourceDictionary.ThemeDictionaries>
                        <ResourceDictionary x:Key="Light">
                            <SolidColorBrush x:Key="FilesystemOperationDialogExclamationMarkIconColor" Color="Goldenrod"/>
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="Dark">
                            <SolidColorBrush x:Key="FilesystemOperationDialogExclamationMarkIconColor" Color="Yellow"/>
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="HighContrast">
                            <SolidColorBrush x:Key="FilesystemOperationDialogExclamationMarkIconColor" Color="Yellow"/>
                        </ResourceDictionary>
                    </ResourceDictionary.ThemeDictionaries>
                </ResourceDictionary>
                <ResourceDictionary>
                    <vc:MiddleTextEllipsisConverter x:Key="MiddleTextEllipsisConverter" />
                    <vc:VisiblityInvertConverter x:Key="VisiblityInvertConverter" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentDialog.Resources>

    <Border Width="500">
        <Grid>
            <StackPanel Spacing="12">
                <TextBlock Text="{x:Bind ViewModel.Subtitle, Mode=OneWay}" />

                <CheckBox
                    x:Name="chkPermanentlyDelete"
                    x:Uid="DeleteItemsDialogPermanentlyDeleteCheckBox"
                    x:Load="{x:Bind ViewModel.PermanentlyDeleteLoad, Mode=OneWay}"
                    Content="Permanently delete"
                    IsChecked="{x:Bind ViewModel.PermanentlyDelete, Mode=TwoWay}"
                    IsEnabled="{x:Bind ViewModel.PermanentlyDeleteEnabled, Mode=OneWay}" />

                <Button
                    x:Name="ExpandButton"
                    Padding="0,4,0,0"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Command="{x:Bind ViewModel.ExpandDetailsCommand}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <FontIcon
                                x:Name="Expand"
                                x:Load="{x:Bind ViewModel.ChevronDownLoad, Mode=OneWay}"
                                FontSize="14"
                                Glyph="&#xE70D;" />
                            <FontIcon
                                x:Name="Collapse"
                                x:Load="{x:Bind ViewModel.ChevronUpLoad, Mode=OneWay}"
                                FontSize="14"
                                Glyph="&#xE70E;" />
                            <TextBlock FontWeight="Bold" Text="Details" />
                        </StackPanel>
                    </Button.Content>
                </Button>

                <ScrollViewer
                    x:Name="ExpandableDetails"
                    MaxHeight="300"
                    HorizontalAlignment="Stretch"
                    x:Load="{x:Bind ViewModel.ExpandableDetailsLoad, Mode=OneWay}"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto">
                    <Grid>

                        <Grid.RowDefinitions>
                            
                            <RowDefinition/>
                            <RowDefinition/>
                            
                        </Grid.RowDefinitions>

                        <StackPanel x:Name="OptionsPanel" Orientation="Horizontal" Spacing="8" x:Load="{x:Bind ViewModel.MustResolveConflicts, Mode=OneWay}">
                            <Button 
                                x:Uid="ConflictingItemsDialogOptionGenerateNewName"
                                HorizontalAlignment="Center"
                                Content="Generate new name"
                                Command="{x:Bind ViewModel.OptionGenerateNewNameCommand, Mode=OneWay}"/>
                            <Button 
                                x:Uid="ConflictingItemsDialogOptionReplaceExisting"
                                HorizontalAlignment="Center"
                                Content="Replace existing"
                                Command="{x:Bind ViewModel.OptionReplaceExistingCommand, Mode=OneWay}"/>
                            <Button 
                                x:Uid="ConflictingItemsDialogOptionSkip"
                                HorizontalAlignment="Center"
                                Content="Skip"
                                Command="{x:Bind ViewModel.OptionSkipCommand, Mode=OneWay}"/>
                        </StackPanel>
                        
                        <ListView
                            x:Name="DetailsGrid"
                            Grid.Row="1"
                            ItemsSource="{x:Bind ViewModel.Items}"
                            SelectionMode="{x:Bind ViewModel.ItemsSelectionMode, Mode=OneWay}"
                            IsItemClickEnabled="False">

                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsStackPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>

                            <!--  Remove Reveal Highlight Effect  -->
                            <ListView.ItemContainerStyle>
                                <Style TargetType="GridViewItem">
                                    <!--  Spacing  -->
                                    <Setter Property="Margin" Value="0" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="GridViewItem">
                                                <ListViewItemPresenter
                                                    x:Name="Root"
                                                    RevealBackground="{ThemeResource GridViewItemRevealBackground}"
                                                    RevealBorderBrush="{ThemeResource GridViewItemRevealBorderBrush}"
                                                    RevealBorderThickness="0" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border>
                                        <Grid ColumnSpacing="12" RowSpacing="4" Padding="2, 10, 2, 10">
                                            <Grid.ColumnDefinitions>
                                                <!-- Operation type -->
                                                <ColumnDefinition Width="Auto"/>
                                                <!--  Item names  -->
                                                <ColumnDefinition Width="*" />
                                                <!--  Combobox with options  -->
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <Grid.RowDefinitions>
                                                <!-- File name -->
                                                <RowDefinition/>
                                                <!-- Source folder and destination folder -->
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>

                                            <!--  Operation type icon  -->
                                            <FontIcon
                                                Grid.Column="0"
                                                Grid.RowSpan="2"
                                                FontSize="24"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Glyph="{Binding OperationIconGlyph, Mode=OneWay}" />

                                            <!--  Exclamation mark icon for conflicts  -->
                                            <Grid
                                                Grid.Column="0"
                                                Grid.RowSpan="2"
                                                Margin="0,0,-2,8"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Visibility="{Binding ExclamationMarkVisibility}">
                                                <!--  Background  -->
                                                <Polygon Fill="{ThemeResource SolidBackgroundFillColorBaseBrush}" Points="6,0 0,10, 12,10" />
                                                <!--  Exclamation mark  -->
                                                <FontIcon
                                                    FontSize="12"
                                                    Foreground="{ThemeResource FilesystemOperationDialogExclamationMarkIconColor}"
                                                    Glyph="&#xE7BA;" />
                                            </Grid>

                                            <!-- Filenames -->
                                            <StackPanel Orientation="Horizontal" Spacing="8" Grid.Column="1" Grid.Row="0">
                                                <!-- Source Filename -->
                                                <TextBlock 
                                                    FontSize="12"
                                                    FontWeight="Bold"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding SourceFileNameDisplayName}"/>

                                                <!-- Arrow icon -->
                                                <FontIcon
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="12"
                                                    Visibility="{Binding DestinationLocationVisibility}"
                                                    Glyph="&#xEA62;"/>

                                                <!-- Destination Filename -->
                                                <TextBlock 
                                                    FontSize="12"
                                                    FontWeight="Bold"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    Visibility="{Binding DestinationLocationVisibility}"
                                                    Text="{Binding DestinationFileNameDisplayName}"/>
                                            </StackPanel>
                                            

                                            <!-- Source folder and destination folder -->
                                            <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" Spacing="8">
                                                <!--  Source folder name -->
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Foreground="Gray"
                                                    Text="{Binding SourceDirectoryDisplayName}" />

                                                <!-- Arrow icon -->
                                                <FontIcon
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Foreground="Gray"
                                                    FontSize="12"
                                                    Visibility="{Binding DestinationLocationVisibility}"
                                                    Glyph="&#xEA62;"/>

                                                <!--  Destination folder name  -->
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Foreground="Gray"
                                                    Visibility="{Binding DestinationLocationVisibility}"
                                                    Text="{Binding DestinationDirectoryDisplayName}" />
                                            </StackPanel>
                                            
                                            <!-- Combobox with options -->
                                            <ComboBox Visibility="{Binding DestinationLocationVisibility}" HorizontalAlignment="Right" Grid.Column="2" Grid.RowSpan="2" SelectedIndex="{Binding ConflictResolveOptionIndex, Mode=TwoWay}">
                                                <ComboBox.Items>
                                                    <ComboBoxItem x:Uid="ConflictingItemsDialogItemOptionGenerateNewName" Content="Generate new name"/>
                                                    <ComboBoxItem x:Uid="ConflictingItemsDialogItemOptionReplaceExisting" Content="Replace"/>
                                                    <ComboBoxItem x:Uid="ConflictingItemsDialogItemOptionSkip" Content="Skip"/>
                                                </ComboBox.Items>
                                            </ComboBox>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </ScrollViewer>
            </StackPanel>
        </Grid>
    </Border>
</ContentDialog>
