<ContentDialog
    x:Class="Files.Dialogs.ElevateConfirmDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local2="using:Files.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Uid="ElevateConfirmDialog"
    Title="This action requires adminstrator rights, would you like to continue as administrator?"
    CloseButtonStyle="{ThemeResource DefaultButtonStyle}"
    CloseButtonText="No"
    CornerRadius="4"
    DefaultButton="Primary"
    PrimaryButtonStyle="{ThemeResource AccentButtonStyle}"
    PrimaryButtonText="Yes"
    RequestedTheme="{x:Bind local2:ThemeHelper.RootTheme}"
    mc:Ignorable="d" />