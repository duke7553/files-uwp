<Page
    x:Class="Files.SettingsPages.Sidebar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:settingsviewmodels="using:Files.ViewModels.SettingsViewModels"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.DataContext>
        <settingsviewmodels:SidebarViewModel />
    </Page.DataContext>

    <Grid>
        <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <StackPanel
                Margin="12,12,8,8"
                Orientation="Vertical"
                Spacing="14">
                <StackPanel.ChildrenTransitions>
                    <TransitionCollection>
                        <RepositionThemeTransition />
                    </TransitionCollection>
                </StackPanel.ChildrenTransitions>

                <TextBlock
                    x:Uid="SettingsSidebarTitle"
                    FontSize="22"
                    FontWeight="Medium"
                    Text="Sidebar" />

                <ToggleSwitch
                    x:Uid="SettingsSidebarQuickAccessExpander"
                    AutomationProperties.Name="Expand Quick Access on startup"
                    Header="Expand Quick Access on startup"
                    HeaderTemplate="{StaticResource CustomHeaderStyle}"
                    IsOn="{Binding ShowLibraryCardsWidget, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <ToggleSwitch
                    x:Uid="SettingsSidebarDriversExpander"
                    AutomationProperties.Name="Expand Drivers on startup"
                    Header="Expand Drivers on startup"
                    HeaderTemplate="{StaticResource CustomHeaderStyle}"
                    IsOn="{Binding ShowDrivesWidget, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <ToggleSwitch
                    x:Uid="SettingsSidebarCloudDriversExpander"
                    AutomationProperties.Name="Expand Cloud Drivers on startup"
                    Header="Expand Cloud Drivers on startup"
                    HeaderTemplate="{StaticResource CustomHeaderStyle}"
                    IsOn="{Binding ShowBundlesWidget, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <ToggleSwitch
                    x:Uid="SettingsSidebarNetworkExpander"
                    AutomationProperties.Name="Expand Network on startup"
                    Header="Expand Network on startup"
                    HeaderTemplate="{StaticResource CustomHeaderStyle}"
                    IsOn="{Binding ShowBundlesWidget, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>