<Page
    x:Class="Files.PropertiesDetailsImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Files.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="Properties_Loaded"
    mc:Ignorable="d">

    <StackPanel Padding="14,0,14,14" VerticalAlignment="Top">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid
                x:Name="Icon2"
                Grid.Row="0"
                Grid.Column="0"
                Width="80"
                Height="80"
                Margin="0,7"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Image
                    x:Name="FolderGlyphIcon2"
                    Width="70"
                    Height="70"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    x:Load="{x:Bind ViewModel.LoadFolderGlyph}"
                    Stretch="Uniform">
                    <Image.Source>
                        <SvgImageSource
                            RasterizePixelHeight="128"
                            RasterizePixelWidth="128"
                            UriSource="{x:Bind ViewModel.FolderIconSource}" />
                    </Image.Source>
                </Image>
                <FontIcon
                    x:Name="EmptyImageIcon2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    x:Load="{x:Bind ViewModel.LoadUnknownTypeGlyph, Mode=OneWay}"
                    FontFamily="{StaticResource FluentUIGlyphs}"
                    FontSize="70"
                    Glyph="&#xea00;" />
                <FontIcon
                    x:Name="WebShortcutGlyph2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    x:Load="{x:Bind ViewModel.LoadLinkIcon, Mode=OneWay}"
                    FontFamily="{StaticResource FluentUIGlyphs}"
                    FontSize="70"
                    Glyph="&#xEAAB;" />
                <Image
                    x:Name="itemIcon2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    x:Load="{x:Bind ViewModel.LoadFileIcon, Mode=OneWay}"
                    Source="{x:Bind ViewModel.FileIconSource, Mode=OneWay}" />
            </Grid>
            <TextBox
                x:Name="itemFileName2"
                x:Uid="PropertiesItemFileName"
                Grid.Row="0"
                Grid.Column="1"
                Margin="20,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                BorderThickness="1"
                IsReadOnly="True"
                Text="{x:Bind ViewModel.ItemName, Mode=OneWay}"
                Visibility="{x:Bind ViewModel.ItemNameVisibility, Mode=OneWay}" />

            <MenuFlyoutSeparator
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="-12,0"
                HorizontalAlignment="Stretch" />


            <TextBlock
                x:Uid="PropertiesDetailsImageTitle"
                Grid.Row="2"
                Grid.Column="0"
                Margin="0,7"
                FontWeight="SemiBold"
                Text="Title:"
                Visibility="Visible" />
            <TextBlock
                x:Name="propertiesDetailsImageTitleValue"
                Grid.Row="2"
                Grid.Column="1"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                IsTextSelectionEnabled="True"
                Text="{x:Bind ViewModel.ImageTitle, Mode=OneWay}"
                Visibility="Visible" />
            
            <TextBlock
                x:Uid="PropertiesDetailsImageItemType"
                Grid.Row="3"
                Grid.Column="0"
                Margin="0,7"
                FontWeight="SemiBold"
                Text="Image type:"
                Visibility="Visible" />
            <TextBlock
                x:Name="propertiesDetailsImageItemTypeValue"
                Grid.Row="3"
                Grid.Column="1"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                IsTextSelectionEnabled="True"
                Text="{x:Bind ViewModel.ItemType, Mode=OneWay}"
                Visibility="Visible" />

            <TextBlock
                x:Uid="PropertiesDetailsImageSize"
                Grid.Row="4"
                Grid.Column="0"
                Margin="0,7"
                FontWeight="SemiBold"
                Text="Size:"
                Visibility="Visible" />
            <TextBlock
                x:Name="PropertiesDetailsImageSize"
                Grid.Row="4"
                Grid.Column="1"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                Text="{x:Bind ViewModel.GetImageSizeString(), Mode=OneWay}"
                Visibility="Visible" />

            <TextBlock
                x:Uid="PropertiesDetailsImageCamera"
                Grid.Row="5"
                Grid.Column="0"
                Margin="0,7"
                FontWeight="SemiBold"
                Text="Camera:"
                Visibility="Visible" />
            <TextBlock
                x:Name="propertiesDetailsImageCameraManufacturer"
                Grid.Row="5"
                Grid.Column="1"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                Text="{x:Bind ViewModel.GetCameraString(), Mode=OneWay}"
                Visibility="Visible" />

            <TextBlock
                x:Uid="PropertiesDetailsImageCoordinates"
                Grid.Row="6"
                Grid.Column="0"
                Margin="0,7"
                FontWeight="SemiBold"
                Text="Coordinates:"
                Visibility="Visible" />
            <TextBlock
                x:Name="propertiesDetailsImageCoordinatesValue"
                Grid.Row="6"
                Grid.Column="1"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                Text="{x:Bind ViewModel.GetCoordinatesString(), Mode=OneWay}"
                Visibility="Visible" />

            <TextBlock
                x:Uid="PropertiesDetailsImageRating"
                Grid.Row="7"
                Grid.Column="0"
                Margin="0,7"
                FontWeight="SemiBold"
                Text="Rating:"
                Visibility="Visible" />
            <RatingControl
                x:Name="propertiesDetailsImageRatingValue"
                Grid.Row="7"
                Grid.Column="1"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                IsReadOnly="True"
                Value="{x:Bind ViewModel.Rating, Mode=OneWay}"
                
                Visibility="Visible" />

            <MenuFlyoutSeparator
                Grid.Row="8"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="-12,0"
                HorizontalAlignment="Stretch" />

            <StackPanel
                Grid.Row="7"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="20,0,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="16"
                Visibility="Visible">
                <Button
                    x:Name="OpenLinkButton"
                    x:Uid="PropertiesDialogOpenLinkButton"
                    MinWidth="100"
                    x:Load="{x:Bind ViewModel.IsSelectedItemShortcut, Mode=OneWay}"
                    Command="{x:Bind ViewModel.ShortcutItemOpenLinkCommand, Mode=OneWay}"
                    Content="Open file location"
                    Style="{ThemeResource ButtonRevealStyle}" />
            </StackPanel>
        </Grid>
    </StackPanel>
</Page>