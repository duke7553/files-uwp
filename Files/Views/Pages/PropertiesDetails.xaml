<Page
    x:Class="Files.PropertiesDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Files.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:filesystem="using:Files.Filesystem"
    xmlns:Maps="using:Windows.UI.Xaml.Controls.Maps"
    xmlns:sys="using:System"
    Loaded="Properties_Loaded"
    mc:Ignorable="d"
    Name="Page"
    d:DesignHeight="5000">

    <Page.Resources>
        <Style x:Key="PropertyTextBlock" TargetType="TextBlock">
            <Setter Property="Grid.Column" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,8,0,2"/>
        </Style>

        <Style x:Key="ValueTextBox" TargetType="TextBox">
            <Setter Property="Grid.Column" Value="1"/>
            <Setter Property="Margin" Value="20,2,0,2"/>
            <Setter Property="CornerRadius" Value="2"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="ValueNumberBox" TargetType="TextBox">
            <Setter Property="Grid.Column" Value="1"/>
            <Setter Property="Margin" Value="20,2,0,2"/>
            <Setter Property="CornerRadius" Value="2"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="MenuFlyoutSeparator" x:Key="Separator">
            <Setter Property="Grid.Column" Value="0"/>
            <Setter Property="Grid.ColumnSpan" Value="2"/>
            <Setter Property="Margin" Value="-12, 0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="SeparatorText">
            <Setter Property="Grid.Column" Value="0"/>
            <Setter Property="FontSize" Value="22"/>
        </Style>
    </Page.Resources>
    <ScrollViewer Height="{Binding Height, ElementName=Page, Mode=OneWay}" Name="ScrollViewer">
        <Grid VerticalAlignment="Top" Margin="14,0,14,0" Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.RenderTransform>
                <CompositeTransform/>
            </Grid.RenderTransform>
            <Grid x:Load="True" x:Name="HeaderGrid" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid 
                x:Name="Icon2"
                Grid.Row="0"
                Grid.Column="0"
                Width="80"
                Height="80"
                Margin="0,7"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                    <Image
                    x:Name="FolderGlyphIcon2"
                    Width="70"
                    Height="70"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    x:Load="{x:Bind ViewModel.LoadFolderGlyph}"
                    Stretch="Uniform">
                        <Image.Source>
                            <SvgImageSource
                            RasterizePixelHeight="128"
                            RasterizePixelWidth="128"
                            UriSource="{x:Bind ViewModel.FolderIconSource}" />
                        </Image.Source>
                    </Image>
                    <FontIcon
                    x:Name="EmptyImageIcon2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    x:Load="{x:Bind ViewModel.LoadUnknownTypeGlyph, Mode=OneWay}"
                    FontFamily="{StaticResource FluentUIGlyphs}"
                    FontSize="70"
                    Glyph="&#xea00;" />
                    <FontIcon
                    x:Name="WebShortcutGlyph2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    x:Load="{x:Bind ViewModel.LoadLinkIcon, Mode=OneWay}"
                    FontFamily="{StaticResource FluentUIGlyphs}"
                    FontSize="70"
                    Glyph="&#xEAAB;" />
                    <Image
                    x:Name="itemIcon2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    x:Load="{x:Bind ViewModel.LoadFileIcon, Mode=OneWay}"
                    Source="{x:Bind ViewModel.FileIconSource, Mode=OneWay}" />
                </Grid>
                <TextBox
                x:Name="itemFileName2"
                x:Uid="PropertiesItemFileName"
                Grid.Row="0"
                Grid.Column="1"
                Margin="20,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                BorderThickness="1"
                IsReadOnly="True"
                Text="{x:Bind ViewModel.ItemName, Mode=OneWay}"
                Visibility="{x:Bind ViewModel.ItemNameVisibility, Mode=OneWay}" />
            </Grid>

            <TextBlock Text="Overview" Grid.Row="1" Style="{StaticResource SeparatorText}"/>
            <MenuFlyoutSeparator Grid.Row="2" Style="{StaticResource Separator}"/>

            <Grid x:Load="True" Grid.Row="3" Grid.Column="0" x:Name="TopGrid">
                <Grid.RowDefinitions >
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="TopColumn" Width="80" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    x:Uid="PropertiesDetailsImageItemType"
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="0,7"
                    FontWeight="SemiBold"
                    Text="Image Type:"
                    Visibility="Visible" />
                <TextBlock
                    x:Name="propertiesDetailsImageItemTypeValue"
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    IsTextSelectionEnabled="True"
                    Text="{x:Bind ViewModel.ItemType, Mode=OneWay}"
                    Visibility="Visible" />

                <TextBlock
                    x:Uid="PropertiesDetailsImageDateTaken"
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="0,7"
                    FontWeight="SemiBold"
                    Text="Date Taken:"
                    Visibility="Visible" />

                <TextBlock
                    x:Name="PropertiesDetailsImageDateTakenValue"
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    IsTextSelectionEnabled="True"
                    Text="{x:Bind ViewModel.DateTaken.LocalDateTime, Mode=OneWay}"
                    Visibility="Visible"/>

                <TextBlock
                    x:Uid="PropertiesDetailsImageSize"
                    Grid.Row="5"
                    Grid.Column="0"
                    Margin="0,7"
                    FontWeight="SemiBold"
                    Text="Dimensions:"
                    Visibility="Visible" />
                <TextBlock
                    x:Name="PropertiesDetailsImageSize"
                    Grid.Row="5"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Text="{x:Bind ViewModel.SystemFileProperties_Image_RO['System.Image.Dimensions'], Mode=OneWay}"
                    Visibility="Visible"
                    IsTextSelectionEnabled="True"/>

                <TextBlock
                    x:Uid="PropertiesDetailsImageCamera"
                    Grid.Row="7"
                    Grid.Column="0"
                    Margin="0,7"
                    FontWeight="SemiBold"
                    Text="Camera:"
                    Visibility="Visible" />
                <TextBlock
                    x:Name="propertiesDetailsImageCameraValue"
                    Grid.Row="7"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                     IsTextSelectionEnabled="True"
                    Text="{x:Bind ViewModel.CameraNameString, Mode=OneWay}"
                    Visibility="Visible" />

                <TextBlock
                    x:Uid="PropertiesDetailsImageCoordinates"
                    Grid.Row="8"
                    Grid.Column="0"
                    Margin="0,7"
                    FontWeight="SemiBold"
                    Text="Location:"
                    Visibility="{x:Bind ViewModel.ShowGeotag, Mode=OneWay}" />
                <TextBlock
                    x:Name="propertiesDetailsImageCoordinatesValue"
                    Text="{x:Bind ViewModel.GeopointString, Mode=OneWay}"
                    Visibility="{x:Bind ViewModel.ShowGeotag, Mode=OneWay}" 
                    Grid.Row="8"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    IsTextSelectionEnabled="True"/>

                <Button
                    Grid.Row="8"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center" HorizontalAlignment="Right"
                    ToolTipService.ToolTip="Open in Maps"
                    Click="Button_Click"
                    Visibility="{x:Bind ViewModel.ShowGeotag, Mode=OneWay}">
                    <FontIcon FontFamily="{StaticResource FluentUIGlyphs}" Glyph="&#xeae8;"/>
                </Button>

                <TextBlock
                    x:Uid="PropertiesDetailsImageRating"
                    Grid.Row="9"
                    Grid.Column="0"
                    Margin="0,7"
                    FontWeight="SemiBold"
                    Text="Rating:"
                    Visibility="Visible" />
                <RatingControl
                    x:Name="propertiesDetailsImageRatingValue"
                    Grid.Row="9"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    IsReadOnly="True"
                    HorizontalAlignment="Left"
                    PlaceholderValue="{x:Bind ViewModel.RatingReal, Mode=OneWay}" 
                    Visibility="Visible" />

                <TextBlock
                        x:Uid="PropertiesDetailsImageShot"
                        Grid.Row="10"
                        Grid.Column="0"
                        Margin="0,7"
                        FontWeight="SemiBold"
                        Text="Shot:"
                        Visibility="Visible" />
                <TextBlock
                    x:Name="propertiesDetailsImageShotValue"
                    Text="{x:Bind ViewModel.ShotString, Mode=OneWay}"
                    Visibility="Visible" 
                    Grid.Row="10"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    IsTextSelectionEnabled="True"/>
            </Grid>

            <TextBlock Text="Description" Grid.Row="4" Style="{StaticResource SeparatorText}"/>
            <MenuFlyoutSeparator Grid.Row="5" Style="{StaticResource Separator}"/>

            <Grid x:Name="DescriptionGrid" x:Load="True" Grid.Row="6" Grid.Column="0">
                <Grid.RowDefinitions >
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding ElementName=TopColumn, Path=Width, Mode=OneWay}" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row ="0" Style="{StaticResource PropertyTextBlock}" Text="Title"/>
                <TextBox Grid.Row ="0" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_Description_RW['System.Title'], Mode=TwoWay}"/>

                <TextBlock Grid.Row ="1" Style="{StaticResource PropertyTextBlock}" Text="Subject"/>
                <TextBox Grid.Row ="1" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_Description_RW['System.Subject'], Mode=TwoWay}"/>

                <TextBlock Grid.Row ="7" Style="{StaticResource PropertyTextBlock}" Text="Rating"/>
                <RatingControl Grid.Row="7" Grid.Column="1" Margin="20,2,0,2" Value="{x:Bind sys:Convert.ToDouble(ViewModel.SystemFileProperties_Description_RO['System.Rating']), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="8" Style="{StaticResource PropertyTextBlock}" Text="Comments"/>
                <TextBox Grid.Row ="8" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_Description_RW['Details_RW'], Mode=TwoWay}"/>

                <TextBlock Grid.Row ="9" Style="{StaticResource PropertyTextBlock}" Text="Copyright"/>
                <TextBox Grid.Row ="9" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_Description_RW['System.Copyright'], Mode=TwoWay}"/>

            </Grid>

            <TextBlock Grid.Row="7" Text="Origin"  Style="{StaticResource SeparatorText}"/>
            <MenuFlyoutSeparator Grid.Row="8" Style="{StaticResource Separator}"/>

            <Grid x:Name="OriginGrid" x:Load="True" Grid.Row="9" Grid.Column="0">
                <Grid.RowDefinitions >
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding ElementName=TopColumn, Path=Width, Mode=OneWay}" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row ="0" Style="{StaticResource PropertyTextBlock}" Text="Authors"/>
                <TextBox Grid.Row ="0" Style="{StaticResource ValueTextBox}"/>

                <TextBlock Grid.Row ="1" Style="{StaticResource PropertyTextBlock}" Text="Dake taken"/>
                <TextBox Grid.Row ="0" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_Photo_RO['System.Photo.DateTaken'].ToString()}"/>

                <TextBlock Grid.Row ="2" Style="{StaticResource PropertyTextBlock}" Text="Time taken"/>
                <TimePicker Grid.Row="2" Grid.Column="1" Margin="20,2,0,2"/>

                <TextBlock Grid.Row ="3" Style="{StaticResource PropertyTextBlock}" Text="Program name"/>
                <TextBox Grid.Row ="3" Style="{StaticResource ValueTextBox}"/>

                <TextBlock Grid.Row ="4" Style="{StaticResource PropertyTextBlock}" Text="Date aquired"/>
                <DatePicker Grid.Row="4" Grid.Column="1" Margin="20,2,0,2"/>

                <TextBlock Grid.Row ="5" Style="{StaticResource PropertyTextBlock}" Text="Time aquired"/>
                <TimePicker Grid.Row="5" Grid.Column="1" Margin="20,2,0,2"/>
            </Grid>

            <TextBlock Grid.Row="10" Text="Image"  Style="{StaticResource SeparatorText}"/>
            <MenuFlyoutSeparator Grid.Row="11" Style="{StaticResource Separator}"/>

            <Grid x:Name="ImageGrid" x:Load="True" Grid.Row="12" Grid.Column="0">
                <Grid.RowDefinitions >
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding ElementName=TopColumn, Path=Width, Mode=OneWay}" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row ="0" Style="{StaticResource PropertyTextBlock}" Text="Image ID"/>
                <TextBox Grid.Row ="0" Style="{StaticResource ValueTextBox}"/>

                <TextBlock Grid.Row ="1" Style="{StaticResource PropertyTextBlock}" Text="Dimensions"/>
                <TextBox Grid.Row ="1" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_Image_RO['System.Image.Dimensions'], Mode=OneWay, FallbackValue='0x0'}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="7" Style="{StaticResource PropertyTextBlock}" Text="Width"/>
                <TextBox Grid.Row ="7" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_Image_RO['System.Image.HorizontalSize'].ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="8" Style="{StaticResource PropertyTextBlock}" Text="Height"/>
                <TextBox Grid.Row ="8" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_Image_RO['System.Image.VerticalSize'].ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="9" Style="{StaticResource PropertyTextBlock}" Text="Horizontal Resolution"/>
                <TextBox Grid.Row ="9" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_Image_RO['System.Image.HorizontalResolution'].ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="10" Style="{StaticResource PropertyTextBlock}" Text="Vertical Resolution"/>
                <TextBox Grid.Row ="10" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_Image_RO['System.Image.VerticalResolution'].ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="11" Style="{StaticResource PropertyTextBlock}" Text="Bit Depth"/>
                <TextBox Grid.Row ="11" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_Image_RO['System.Image.BitDepth'].ToString(), Mode=OneWay}" IsReadOnly="True"/>

            </Grid>

            <TextBlock Grid.Row="13" Text="Camera"  Style="{StaticResource SeparatorText}"/>
            <MenuFlyoutSeparator Grid.Row="14" Style="{StaticResource Separator}"/>
            <Grid x:Name="CameraGrid" x:Load="True" Grid.Row="15" Grid.Column="0">
                <Grid.RowDefinitions >
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding ElementName=TopColumn, Path=Width, Mode=OneWay}" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row ="0" Style="{StaticResource PropertyTextBlock}" Text="Camera manufacturer"/>
                <TextBox Grid.Row ="0" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_Photo_RW['System.Photo.CameraManufacturer'], Mode=TwoWay}"/>

                <TextBlock Grid.Row ="1" Style="{StaticResource PropertyTextBlock}" Text="Camera Model"/>
                <TextBox Grid.Row ="1" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_Photo_RW['System.Photo.CameraModel'], Mode=TwoWay}"/>

                <TextBlock Grid.Row ="2" Style="{StaticResource PropertyTextBlock}" Text="Exposure"/>
                <TextBox Grid.Row ="2" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_Photo_RO['System.Photo.ExposureTime'].ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="3" Style="{StaticResource PropertyTextBlock}" Text="Focal Length"/>
                <TextBox Grid.Row ="3" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_Photo_RO['System.Photo.FocalLength'].ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="4" Style="{StaticResource PropertyTextBlock}" Text="Aperature"/>
                <TextBox Grid.Row ="4" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_Photo_RO['System.Photo.Aperture'].ToString(), Mode=OneWay}" IsReadOnly="True"/>
            </Grid>


            <TextBlock Grid.Row="16" Text="Advanced photo"  Style="{StaticResource SeparatorText}"/>
            <MenuFlyoutSeparator Grid.Row="17" Style="{StaticResource Separator}"/>
            <Grid x:Name="AdvancedPhotoGrid" x:Load="True" Grid.Row="18" Grid.Column="0">
                <Grid.RowDefinitions >
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding ElementName=TopColumn, Path=Width, Mode=OneWay}" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row ="0" Style="{StaticResource PropertyTextBlock}" Text="Title"/>
                <TextBox Grid.Row ="0" Style="{StaticResource ValueTextBox}"/>

                <TextBlock Grid.Row ="1" Style="{StaticResource PropertyTextBlock}" Text="Title"/>
                <TextBox Grid.Row ="1" Style="{StaticResource ValueTextBox}"/>

                <TextBlock Grid.Row ="7" Style="{StaticResource PropertyTextBlock}" Text="Title"/>
                <TextBox Grid.Row ="7" Style="{StaticResource ValueTextBox}"/>
            </Grid>


            <TextBlock Grid.Row="19" Text="GPS"  Style="{StaticResource SeparatorText}"/>
            <MenuFlyoutSeparator Grid.Row="20" Style="{StaticResource Separator}"/>
            <Grid x:Name="GPSGrid" x:Load="True" Grid.Row="21" Grid.Column="0" Visibility="Visible">
                <Grid.RowDefinitions >
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding ElementName=TopColumn, Path=Width, Mode=OneWay}" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row ="0" Style="{StaticResource PropertyTextBlock}" Text="Latitude"/>
                <TextBox Grid.Row ="0" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.Latitude.ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="1" Style="{StaticResource PropertyTextBlock}" Text="Longitude"/>
                <TextBox Grid.Row ="1" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.Longitude.ToString(), Mode=OneWay}" IsReadOnly="True"/>

                <TextBlock Grid.Row ="2" Style="{StaticResource PropertyTextBlock}" Text="Altitude"/>
                <TextBox Grid.Row ="2" Style="{StaticResource ValueTextBox}" Text="{x:Bind ViewModel.SystemFileProperties_GPS_RO['System.GPS.Altitude'], Mode=OneWay}"/>
            </Grid>

            <TextBlock Grid.Row="22" Text="File"  Style="{StaticResource SeparatorText}"/>
            <MenuFlyoutSeparator Grid.Row="23" Style="{StaticResource Separator}"/>
            <Grid x:Name="FileGrid" x:Load="True" Grid.Row="24" Grid.Column="0">
                <Grid.RowDefinitions >
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding ElementName=TopColumn, Path=Width, Mode=OneWay}" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row ="0" Style="{StaticResource PropertyTextBlock}" Text="Name"/>
                <TextBox Grid.Row ="0" Style="{StaticResource ValueTextBox}"/>

                <TextBlock Grid.Row ="1" Style="{StaticResource PropertyTextBlock}" Text="Title"/>
                <TextBox Grid.Row ="1" Style="{StaticResource ValueTextBox}"/>

                <TextBlock Grid.Row ="7" Style="{StaticResource PropertyTextBlock}" Text="Title"/>
                <TextBox Grid.Row ="7" Style="{StaticResource ValueTextBox}"/>
            </Grid>
            <Button Margin="0, 10, 0, 0" Grid.Row="25" Content="Clear All Personal Information" HorizontalAlignment="Stretch">
                <Button.Flyout>
                    <Flyout>
                        <StackPanel Orientation="Vertical" Spacing="5">
                            <TextBlock Text="Confirm?"/>
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <Button Content="Clear"/>
                                <Button Content="Cancel"/>
                            </StackPanel>
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
            </Button>
        </Grid>
    </ScrollViewer>
</Page>