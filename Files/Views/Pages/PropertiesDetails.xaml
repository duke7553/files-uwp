<Page
    x:Class="Files.PropertiesDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Files.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:filesystem="using:Files.Filesystem"
    xmlns:Maps="using:Windows.UI.Xaml.Controls.Maps"
    xmlns:convert="using:System.Convert" xmlns:usercontrols="using:Files.UserControls" 
    xmlns:converters="using:Files.Converters"
    Loaded="Properties_Loaded"
    mc:Ignorable="d"
    Name="Page"
    d:DesignHeight="3000">

    <Page.Resources>
        <ResourceDictionary x:Key="PropertiesStyles">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///ResourceDictionaries/PropertiesStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <ScrollViewer Height="{Binding Height, ElementName=Page, Mode=OneWay}" Name="ScrollViewer">
        <StackPanel VerticalAlignment="Top" Margin="14,0,14,0" Name="MainGrid">
            <Grid x:Load="True" x:Name="HeaderGrid" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid 
                x:Name="Icon2"
                Grid.Row="0"
                Grid.Column="0"
                Width="110"
                Height="80"
                Margin="0,7"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                    <Image
                    x:Name="FolderGlyphIcon2"
                    Width="70"
                    Height="70"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    x:Load="{x:Bind ViewModel.LoadFolderGlyph}"
                    Stretch="Uniform">
                        <Image.Source>
                            <SvgImageSource
                            RasterizePixelHeight="128"
                            RasterizePixelWidth="128"
                            UriSource="{x:Bind ViewModel.FolderIconSource}" />
                        </Image.Source>
                    </Image>
                    <FontIcon
                        x:Name="EmptyImageIcon2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        x:Load="{x:Bind ViewModel.LoadUnknownTypeGlyph, Mode=OneWay}"
                        FontFamily="{StaticResource FluentUIGlyphs}"
                        FontSize="70"
                        Glyph="&#xea00;" />
                        <FontIcon
                        x:Name="WebShortcutGlyph2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        x:Load="{x:Bind ViewModel.LoadLinkIcon, Mode=OneWay}"
                        FontFamily="{StaticResource FluentUIGlyphs}"
                        FontSize="70"
                        Glyph="&#xEAAB;" />
                    <Image
                    x:Name="itemIcon2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    x:Load="{x:Bind ViewModel.LoadFileIcon, Mode=OneWay}"
                    Source="{x:Bind ViewModel.FileIconSource, Mode=OneWay}" />
                </Grid>
                <TextBox
                    x:Name="itemFileName2"
                    x:Uid="PropertiesItemFileName"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="20,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    BorderThickness="1"
                    IsReadOnly="True"
                    Text="{x:Bind ViewModel.ItemName, Mode=OneWay}"
                    Style="{StaticResource PropertyValueTextBox}"
                    Visibility="{x:Bind ViewModel.ItemNameVisibility, Mode=OneWay}" />
            </Grid>

            <TextBlock Text="Overview" Grid.Row="1" Style="{StaticResource SeparatorText}" Visibility="{Binding ElementName=OverviewImage, Path=Visibility, Mode=OneWay}"/>
            <MenuFlyoutSeparator Grid.Row="2" Style="{StaticResource Separator}" Visibility="{Binding ElementName=OverviewImage, Path=Visibility, Mode=OneWay}"/>

            <Grid x:Load="True" Grid.Row="3" Grid.Column="0" x:Name="OverviewImage" Visibility="Collapsed">
                <Grid.RowDefinitions >
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <TextBlock Style="{StaticResource PropertyName}" Text="Image Type:" Visibility="Visible" Grid.Row="3"/>
                <TextBlock Style="{StaticResource PropertyValueTextBlock}" Grid.Row="3" Text="{x:Bind ViewModel.ItemType, Mode=OneWay}"/>

                <TextBlock Style="{StaticResource PropertyName}" Grid.Row="4" Text="Date Taken:" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Photo, Mode=OneWay}"/>
                <TextBlock Style="{StaticResource PropertyValueTextBlock}" Grid.Row="4" Text="{x:Bind ViewModel.SystemFileProperties_RO['System.Photo.DateTaken'].ToString(), Mode=OneWay}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Photo, Mode=OneWay}"/>

                <TextBlock Style="{StaticResource PropertyName}" Grid.Row="5" Text="Dimensions:" Visibility="Visible" />
                <TextBlock Grid.Row="5" Text="{x:Bind ViewModel.SystemFileProperties_RO['System.Image.Dimensions'].ToString(), Mode=OneWay}" Visibility="Visible" Style="{StaticResource PropertyValueTextBlock}"/>

                <TextBlock Grid.Row="7" Text="Camera:" Style="{StaticResource PropertyName}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Photo, Mode=OneWay}"/>
                <TextBlock Grid.Row="7" Text="{x:Bind ViewModel.CameraNameString, Mode=OneWay}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Photo, Mode=OneWay}" Style="{StaticResource PropertyValueTextBlock}"/>

                <TextBlock Grid.Row="8" Text="Shot:" Style="{StaticResource PropertyName}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Photo}"/>
                <TextBlock Text="{x:Bind ViewModel.ShotString, Mode=OneWay}" Grid.Row="8" Style="{StaticResource PropertyValueTextBlock}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Photo}"/>

                <TextBlock Grid.Row="9" Text="Location:" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_GPS, Mode=OneWay}" Style="{StaticResource PropertyName}"/>
                <TextBlock Text="{x:Bind ViewModel.GeopointString, Mode=OneWay}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_GPS, Mode=OneWay}" Grid.Row="9" Style="{StaticResource PropertyValueTextBlock}"/>

                <Button
                    Grid.Row="9"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center" HorizontalAlignment="Right"
                    ToolTipService.ToolTip="Open in Maps"
                    Click="Button_Click"
                    Visibility="{x:Bind ViewModel.DetailsSectionVisibility_GPS, Mode=OneWay}">
                    <FontIcon FontFamily="{StaticResource FluentUIGlyphs}" Glyph="&#xeae8;"/>
                </Button>
            </Grid>

            <TextBlock Text="Core" Grid.Row="4" Style="{StaticResource SeparatorText}"/>
            <MenuFlyoutSeparator Grid.Row="5" Style="{StaticResource Separator}"/>

            <StackPanel x:Name="CoreGrid" x:Load="True">
                <usercontrols:PropertyListItem Text="Title" ValueText="{x:Bind ViewModel.SystemFileProperties_RW['System.Title'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Subject" ValueText="{x:Bind ViewModel.SystemFileProperties_RW['System.Subject'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Comment" ValueText="{x:Bind ViewModel.SystemFileProperties_RW['System.Comment'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Copyright" ValueText="{x:Bind ViewModel.SystemFileProperties_RW['System.Copyright'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="DateCreated" ValueText="{x:Bind ViewModel.SystemFileProperties_RW['System.DateCreated'], Mode=TwoWay, Converter={StaticResource DateTimeOffsetToString}}"/>
                <usercontrols:PropertyListItem Text="DateModified" ValueText="{x:Bind ViewModel.SystemFileProperties_RW['System.DateModified'], Mode=TwoWay, Converter={StaticResource DateTimeOffsetToString}}"/>
                <usercontrols:PropertyListItem Text="Rating" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.RatingText'], Mode=OneWay}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="ItemFolderPathDisplay" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.ItemFolderPathDisplay'], Mode=OneWay}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="ItemTypeText" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.ItemTypeText'], Mode=OneWay}" IsReadOnly="True"/>

            </StackPanel>

            <TextBlock Grid.Row="10" Text="Image"  Style="{StaticResource SeparatorText}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Image, Mode=OneWay}"/>
            <MenuFlyoutSeparator Grid.Row="11" Style="{StaticResource Separator}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Image, Mode=OneWay}"/>

            <StackPanel x:Name="ImageGrid" x:Load="True" Grid.Row="12" Grid.Column="0" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Image, Mode=OneWay}">

                <usercontrols:PropertyListItem Text="Image ID" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.Image.ImageID'], Mode=OneWay}"/>
                <usercontrols:PropertyListItem Text="Compressed Bits Per Pixel" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.Image.CompressedBitsPerPixel'], Mode=OneWay, Converter={StaticResource DoubleToString}}"/>
                <usercontrols:PropertyListItem Text="Bit Depth" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.Image.BitDepth'], Mode=OneWay, Converter={StaticResource UInt32ToString}}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="Compression" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.Image.CompressionText'], Mode=OneWay}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="Dimensions" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.Image.Dimensions'], Mode=OneWay}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="Horizontal Size" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.Image.HorizontalSize'], Mode=OneWay, Converter={StaticResource UInt32ToString}}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="Vertical Size" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.Image.VerticalSize'], Mode=OneWay, Converter={StaticResource UInt32ToString}}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="Horizontal Resolution" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.Image.HorizontalResolution'], Converter={StaticResource UInt32ToString}, Mode=OneWay}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="Vertical Resolution" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.Image.VerticalResolution'], Converter={StaticResource UInt32ToString}, Mode=OneWay}" IsReadOnly="True"/>

            </StackPanel>

            <TextBlock Grid.Row="13" Text="Photo"  Style="{StaticResource SeparatorText}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Photo, Mode=OneWay}"/>
            <MenuFlyoutSeparator Grid.Row="14" Style="{StaticResource Separator}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Photo, Mode=OneWay}"/>
            <StackPanel x:Name="PhotoGrid" x:Load="True" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Photo, Mode=OneWay}">

                <usercontrols:PropertyListItem Text="Camera Manufacturer" ValueText="{x:Bind ViewModel.SystemFileProperties_RW['System.Photo.CameraManufacturer'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Camera Model" ValueText="{x:Bind ViewModel.SystemFileProperties_RW['System.Photo.CameraModel'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Date Taken" ValueText="{x:Bind ViewModel.SystemFileProperties_RW['System.Photo.DateTaken'], Mode=TwoWay, Converter={StaticResource DateTimeOffsetToString}}"/>
                <usercontrols:PropertyListItem Text="Exposure Time" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.Photo.ExposureTime'], Mode=OneWay, Converter={StaticResource DoubleToString}}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="Focal Length" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.Photo.FocalLength'], Mode=OneWay, Converter={StaticResource DoubleToString}}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="Aperture" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.Photo.Aperture'], Mode=OneWay, Converter={StaticResource DoubleToString}}" IsReadOnly="True"/>
            </StackPanel>
            
            <TextBlock Text="GPS"  Style="{StaticResource SeparatorText}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_GPS, Mode=OneWay}"/>
            <MenuFlyoutSeparator Grid.Row="20" Style="{StaticResource Separator}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_GPS, Mode=OneWay}"/>
            <StackPanel x:Name="GPSGrid" x:Load="True" Grid.Row="21" Grid.Column="0" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_GPS, Mode=OneWay}">
                <usercontrols:PropertyListItem Text="Latitude" ValueText="{x:Bind ViewModel.Latitude, Mode=OneWay}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="Longitude" ValueText="{x:Bind ViewModel.Longitude, Mode=OneWay}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="Altitude" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.GPS.Altitude'], Mode=OneWay, Converter={StaticResource DoubleToString}}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="Address" ValueText="{x:Bind ViewModel.Geopoint.Address.FormattedAddress, Mode=OneWay}" IsReadOnly="True"/>
            </StackPanel>

            <TextBlock Text="Audio"  Style="{StaticResource SeparatorText}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Audio, Mode=OneWay}"/>
            <MenuFlyoutSeparator Style="{StaticResource Separator}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Audio, Mode=OneWay}"/>
            <StackPanel x:Name="AudioGrid" x:Load="True" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Audio, Mode=OneWay}">
                <usercontrols:PropertyListItem Text="Encoding Bitrate" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.Audio.EncodingBitrate'], Mode=OneWay, Converter={StaticResource UInt32ToString}}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="Compression" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.Audio.Compression'], Mode=OneWay}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="Format" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.Audio.Format'], Mode=OneWay}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="Sample Rate" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.Audio.SampleRate'], Mode=OneWay, Converter={StaticResource UInt32ToString}}" IsReadOnly="True"/>
            </StackPanel>

            <TextBlock Text="Music"  Style="{StaticResource SeparatorText}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Music, Mode=OneWay}"/>
            <MenuFlyoutSeparator Style="{StaticResource Separator}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Music, Mode=OneWay}"/>
            <StackPanel x:Name="MusicGrid" x:Load="True" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Music, Mode=OneWay}">
                <usercontrols:PropertyListItem Text="Album Artist" ValueText="{x:Bind ViewModel.SystemFileProperties_RW['System.Music.AlbumArtist'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Album Title" ValueText="{x:Bind ViewModel.SystemFileProperties_RW['System.Music.AlbumTitle'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Album ID" ValueText="{x:Bind ViewModel.SystemFileProperties_RW['System.Music.AlbumID'], Mode=OneWay}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="Artist" ValueText="{x:Bind ViewModel.SystemFileProperties_RW['System.Music.Artist'], Mode=TwoWay, Converter={StaticResource StringArrayToString}}"/>
                <usercontrols:PropertyListItem Text="Beats Per Minute" ValueText="{x:Bind ViewModel.SystemFileProperties_RW['System.Music.BeatsPerMinute'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Composer" ValueText="{x:Bind ViewModel.SystemFileProperties_RW['System.Music.Composer'], Mode=TwoWay, Converter={StaticResource StringArrayToString}}"/>
                <usercontrols:PropertyListItem Text="Conductor" ValueText="{x:Bind ViewModel.SystemFileProperties_RW['System.Music.Conductor'], Mode=TwoWay, Converter={StaticResource StringArrayToString}}"/>
                <usercontrols:PropertyListItem Text="DiscNumber" ValueText="{x:Bind ViewModel.SystemFileProperties_RW['System.Music.DiscNumber'], Mode=TwoWay, Converter={StaticResource UInt32ToString}}"/>
                <usercontrols:PropertyListItem Text="Genre" ValueText="{x:Bind ViewModel.SystemFileProperties_RW['System.Music.Genre'], Mode=TwoWay, Converter={StaticResource StringArrayToString}}"/>
                <usercontrols:PropertyListItem Text="TrackNumber" ValueText="{x:Bind ViewModel.SystemFileProperties_RW['System.Music.TrackNumber'], Mode=TwoWay, Converter={StaticResource UInt32ToString}}"/>
            </StackPanel>
            

            <TextBlock Text="Media"  Style="{StaticResource SeparatorText}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Media, Mode=OneWay}"/>
            <MenuFlyoutSeparator Style="{StaticResource Separator}" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Media, Mode=OneWay}"/>
            <StackPanel x:Name="MediaGrid" x:Load="True" Visibility="{x:Bind ViewModel.DetailsSectionVisibility_Media, Mode=OneWay}" Orientation="Vertical">
                <usercontrols:PropertyListItem Text="Duration" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.Media.Duration'], Mode=OneWay, Converter={StaticResource UInt32ToString}}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="Average Level" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.Media.AverageLevel'], Mode=OneWay, Converter={StaticResource UInt32ToString}}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="Frame Count" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.Media.FrameCount'], Mode=OneWay, Converter={StaticResource UInt32ToString}}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="Protection Type" ValueText="{x:Bind ViewModel.SystemFileProperties_RO['System.Media.ProtectionType'], Mode=OneWay}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="Author Url" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.AuthorUrl'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Content Distributor" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.ContentDistributor'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Creator Application" ValueText="{ x:Bind ViewModel.SystemFileProperties_RO['System.Media.CreatorApplication'], Mode=TwoWay}" IsReadOnly="True"/>
                <usercontrols:PropertyListItem Text="Date Released" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.DateReleased'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Dlna ProfileID" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.DlnaProfileID'], Mode=TwoWay, Converter={StaticResource StringArrayToString}}"/>
                <usercontrols:PropertyListItem Text="DVD ID" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.DVDID'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Encoded By" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.EncodedBy'], Mode=TwoWay, Converter={StaticResource StringArrayToString}}"/>
                <usercontrols:PropertyListItem Text="Encoding Settings" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.EncodingSettings'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Series Name" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.SeriesName'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Season Number" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.SeasonNumber'], Mode=TwoWay, Converter={StaticResource UInt32ToString}}"/>
                <usercontrols:PropertyListItem Text="Episode Number" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.EpisodeNumber'], Mode=TwoWay, Converter={StaticResource UInt32ToString}}"/>
                <usercontrols:PropertyListItem Text="MCDI" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.MCDI'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Producer" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.Producer'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Promotion Url" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.PromotionUrl'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Provider Style" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.ProviderStyle'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Publisher" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.Publisher'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Thumbnail Large Path" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.ThumbnailLargePath'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Thumbnail Large Uri" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.ThumbnailLargeUri'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Thumbnail Small Path" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.ThumbnailSmallPath'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Thumbnail Small Uri" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.ThumbnailSmallUri'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Unique File Identifier" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.UniqueFileIdentifier'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="User Web Url" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.UserWebUrl'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Writer" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.Writer'], Mode=TwoWay}"/>
                <usercontrols:PropertyListItem Text="Year" ValueText="{ x:Bind ViewModel.SystemFileProperties_RW['System.Media.Year'], Mode=TwoWay, Converter={StaticResource UInt32ToString}}"/>
            </StackPanel>


            <Button x:Name="ClearPersonalInformation" Margin="0, 10, 0, 0" Grid.Row="25" Content="Clear All Personal Information" HorizontalAlignment="Stretch">
                <Button.Flyout>
                    <Flyout x:Name="ClearPersonalInformationFlyout">
                        <StackPanel Orientation="Vertical" Spacing="5">
                            <TextBlock Text="Confirm?"/>
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <Button Content="Clear" Click="ClearPersonalInformation_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
            </Button>
        </StackPanel>
    </ScrollViewer>
</Page>